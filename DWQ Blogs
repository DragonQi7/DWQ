            // Open in new window/tab
            const newWindow = window.open('', '_blank');
            newWindow.document.write(articleHTML);
            newWindow.document.close();
        }

        function loadOlderPosts() {
            // Simulate loading older posts
            const button = document.querySelector('.nav-button');
            const originalText = button.innerHTML;
            
            button.innerHTML = '✨ Loading...';
            button.style.background = '#C7B299';
            
            setTimeout(() => {
                button.innerHTML = originalText;
                button.style.background = '#EFE9E3';
                
                // Add a gentle notification
                const notification = document.createElement('div');
                notification.textContent = '🌙 More wisdom coming soon...';
                notification.style.cssText = `
                    position: fixed;
                    top: 20px;
                    right: 20px;
                    background: #BDA27D;
                    color: white;
                    padding: 12px 20px;
                    border-radius: 25px;
                    font-family: 'Lato', sans-serif;
                    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
                    z-index: 1000;
                    animation: slideIn 0.3s ease-out;
                `;
                
                document.body.appendChild(notification);
                
                setTimeout(() => {
                    notification.style.animation = 'slideOut 0.3s ease-out forwards';
                    setTimeout(() => notification.remove(), 300);
                }, 2000);
            }, 1500);
        }

        // Add slide animations for notifications
        const style = document.createElement('style');
        style.textContent = `
            @keyframes slideIn {
                from { transform: translateX(100%); opacity: 0; }
                to { transform: translateX(0); opacity: 1; }
            }
            @keyframes slideOut {
                from { transform: translateX(0); opacity: 1; }
                to { transform: translateX(100%); opacity: 0; }
            }
        `;
        document.head.appendChild(style);

        // Add click handlers for blog titles
        document.querySelectorAll('.card-title').forEach(title => {
            title.addEventListener('click', function() {
                openArticle(this.textContent);
            });
        });
    </script>
